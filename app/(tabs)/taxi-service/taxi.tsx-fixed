        <TouchableOpacity
          style={[
            styles.orderButton,
            !selectedCarType && styles.orderButtonDisabled,
          ]}
          onPress={handleOrderTaxi}
          disabled={!selectedCarType}
        >
          <Text style={styles.orderButtonText}>Order Taxi</Text>
        </TouchableOpacity>
      </View>
    </View>
