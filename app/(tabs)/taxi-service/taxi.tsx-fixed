        <View style={styles.tripDetails}>
          <View style={styles.tripPointsContainer}>
            <View style={styles.tripPointIconContainer}>
              <View style={styles.originDot} />
              <View style={styles.tripPointLine} />
              <View style={styles.destinationDot} />
            </View>
            <View style={styles.tripPointTexts}>
              <Text style={styles.originText}>
                {pickupAddress ? pickupAddress.name : "Current Location"}
              </Text>
              <Text style={styles.destinationTextInput}>
                {destinationAddress ? destinationAddress.name : "Destination"}
              </Text>
            </View>
          </View>
        </View>

        <View style={styles.carOptionsContainer}>
          {carOptions.map((car) => (
            <TouchableOpacity
              key={car.type}
