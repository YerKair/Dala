          <TouchableOpacity
            style={styles.driverModeButton}
            onPress={() => setShowDriverControls(true)}
          >
            <FontAwesome name="car" size={16} color="#333" />
            <Text style={styles.driverModeText}>Driver Mode</Text>
          </TouchableOpacity>
        )}
      </View>

      {/* Map view */}
      <MapView
        style={styles.map}
        region={mapRegion}
        onRegionChangeComplete={setMapRegion}
      >
        {/* Current location marker */}
        {pickupAddress && (
          <Marker
            coordinate={pickupAddress.coordinates}
            title="Your Location"
            description={pickupAddress.name}
          >
            <View style={styles.currentLocationMarker}>
              <View style={styles.currentLocationDot} />
            </View>
          </Marker>
        )}

        {/* Pickup location marker */}
        {destinationAddress && (
          <Marker
            coordinate={destinationAddress.coordinates}
            title="Pickup Location"
            description={destinationAddress.name}
          >
            <View style={styles.pickupLocationMarker}>
              <Ionicons name="location" size={24} color="#4CAF50" />
            </View>
          </Marker>
        )}

        {/* Route line between pickup and destination */}
        {pickupAddress && destinationAddress && (
          <Polyline
            coordinates={[
              pickupAddress.coordinates,
              destinationAddress.coordinates,
            ]}
            strokeColor="#4A5D23"
            strokeWidth={4}
          />
        )}
      </MapView>

      {/* Bottom panel */}
      <View style={styles.bottomPanel}>
        {/* If in first step (selecting pickup/destination) */}
        {!showCarSelection && (
          <>
            <View style={styles.locationInputsContainer}>
              <View style={styles.locationInputWrapper}>
                <TouchableOpacity
                  style={styles.locationInput}
                  onPress={handlePickupPress}
                >
                  <View style={styles.inputIconContainer}>
                    <View
                      style={{
                        width: 10,
                        height: 10,
                        borderRadius: 5,
                        backgroundColor: "#4CAF50",
                      }}
                    />
                  </View>
                  <Text
                    style={[
                      styles.inputText,
                      !pickupAddress && styles.inputPlaceholder,
                    ]}
                  >
                    {pickupAddress ? pickupAddress.name : "Pickup Location"}
                  </Text>
                </TouchableOpacity>

                <TouchableOpacity
                  style={styles.locationInput}
                  onPress={() => setShowAddressSelection(false)}
                >
                  <View style={styles.inputIconContainer}>
                    <View
                      style={{
                        width: 10,
                        height: 10,
                        borderRadius: 5,
                        backgroundColor: "#F44336",
                      }}
                    />
                  </View>
                  <TextInput
                    style={[
                      styles.inputText,
                      !destinationAddress && styles.inputPlaceholder,
                    ]}
                    placeholder="Where to?"
                    placeholderTextColor="#999"
                    value={destinationInput}
                    onChangeText={handleDestinationInputChange}
                    onFocus={() => setShowAddressSelection(false)}
                  />
                </TouchableOpacity>
              </View>

              {/* Address suggestions */}
              {showAddressSelection && searchResults.length > 0 && (
                <View style={styles.suggestionsContainer}>
                  {isLoading ? (
                    <View style={styles.loadingContainer}>
                      <ActivityIndicator color="#4A5D23" />
                      <Text style={styles.loadingText}>
                        Searching addresses...
                      </Text>
                    </View>
                  ) : (
                    <FlatList
                      data={searchResults}
                      keyExtractor={(item, index) => `suggestion-${index}`}
                      renderItem={({ item }) => (
                        <TouchableOpacity
                          style={styles.suggestionItem}
                          onPress={() => handleSelectAddress(item)}
                        >
                          <Ionicons
                            name="location-outline"
                            size={18}
                            color="#666"
                            style={styles.suggestionIcon}
                          />
                          <Text style={styles.suggestionText}>{item.name}</Text>
                        </TouchableOpacity>
                      )}
                      ListEmptyComponent={
                        <Text style={styles.noResultsText}>
                          No addresses found. Try a different search.
                        </Text>
                      }
                    />
                  )}
                </View>
              )}
            </View>

            {/* Order button */}
            <TouchableOpacity
              style={[
                styles.orderButton,
                (!pickupAddress || !destinationAddress) &&
                  styles.orderButtonDisabled,
              ]}
              onPress={handleInitialOrder}
              disabled={!pickupAddress || !destinationAddress}
            >
              <Text style={styles.orderButtonText}>
                Set Pickup & Destination
              </Text>
            </TouchableOpacity>
          </>
        )}

        {/* If in car selection/fare step */}
        {showCarSelection && !selectedCar && (
          <View style={styles.fareContainer}>
            <Text style={styles.fareTitle}>Select Car Type</Text>
            {carOptions.map((car) => (
              <TouchableOpacity
                key={car.type}
                style={[
                  styles.carOption,
                  selectedCar === car.type && styles.carOptionSelected,
                ]}
                onPress={() => handleSelectCar(car.type, car.price)}
              >
                <View style={styles.carIconContainer}>
                  {car.type === "Normal" ? (
                    <FontAwesome name="car" size={24} color="#333" />
                  ) : car.type === "Minivan" ? (
                    <FontAwesome name="bus" size={24} color="#333" />
                  ) : (
                    <FontAwesome name="users" size={24} color="#333" />
                  )}
                </View>
                <View style={styles.carDetails}>
                  <Text style={styles.carTypeText}>{car.type}</Text>
                  <Text style={styles.carDescription}>
                    {car.type === "Normal"
                      ? "Sedan"
                      : car.type === "Minivan"
                      ? "Van"
                      : "Shared ride"}
                  </Text>
                </View>
                <Text style={styles.carPrice}>{car.price} ₸</Text>
              </TouchableOpacity>
            ))}

            <TouchableOpacity
              style={[
                styles.orderConfirmButton,
                !selectedCar && styles.orderButtonDisabled,
              ]}
              onPress={handleOrderTaxi}
              disabled={!selectedCar}
            >
              <Text style={styles.orderButtonText}>Confirm Order</Text>
            </TouchableOpacity>
          </View>
        )}

        {/* After order placed, show searching for driver */}
        {selectedCar && (
          <View style={styles.searchingContainer}>
            <SonarAnimation
              isSearching={isSearchingDriver}
              searchTimeSeconds={searchTimeSeconds}
            />
            <TouchableOpacity
              style={styles.cancelSearchButton}
              onPress={() => {
                // Reset state
                setSelectedCar(null);
                setIsSearchingDriver(false);
                // Clear global state
                resetTrip();
              }}
            >
              <Text style={styles.cancelSearchText}>Cancel Search</Text>
            </TouchableOpacity>
          </View>
        )}
      </View>
    </SafeAreaView>
  );

  // Second screen - select car type
  const renderCarSelectionScreen = () => (
    <View style={styles.container}>
      {/* Map background */}
      <MapView
        style={styles.map}
        region={mapRegion}
        showsUserLocation={true}
        ref={mapRef}
      >
        {/* Current location marker */}
        {pickupAddress && (
          <Marker
            coordinate={pickupAddress.coordinates}
            title="Your Location"
            description={pickupAddress.name}
          >
            <View style={styles.currentLocationMarker}>
              <View style={styles.currentLocationDot} />
            </View>
          </Marker>
        )}

        {/* Destination marker */}
        {destinationAddress && (
          <Marker
            coordinate={destinationAddress.coordinates}
